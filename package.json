{
  "author": "Jacob Lurie",
  "license": "ISC",
  "name": "men-stack-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate for a REST API service that uses Express, MongoDB, Mongoose, and Node.",
  "main": "src/server.ts",
  "scripts": {
    "start": "nodemon src/server.ts",
    "dev": "nodemon src/server.ts",
    "build": "rm -rf build/ && prettier --write src/ && tsc",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,json,css,scss,md}'",
    "test": "jest --no-cache --detectOpenHandles"
  },
  "dependencies": {
    "@types/axios": "^0.14.0",
    "@types/express": "^4.17.16",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.4",
    "@types/node-fetch": "^2.6.2",
    "@types/supertest": "^2.0.12",
    "axios": "^1.3.1",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "fetch": "^1.1.0",
    "mongoose": "^6.9.0",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.20",
    "socket.io": "^4.5.4",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "jest": "^29.4.1",
    "prettier": "^2.8.3",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  },
  "jest": {
    "rootDir": ".",
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
