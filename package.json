{
  "author": "Jacob Lurie",
  "license": "ISC",
  "name": "nightlight-backend",
  "version": "1.0.0",
  "description": "Backend for the nightlight mobile application Express, MongoDB, Mongoose, and Node.",
  "main": "src/server.ts",
  "scripts": {
    "start": "npm-run-all -p start:redis start:worker start:server",
    "start:test": "npm-run-all -p start:redis start:worker",
    "worker": "ts-node src/queue/setup/workers.setup.ts",
    "dev": "nodemon src/index.ts",
    "build": "rm -rf build/ && prettier --write src/ && tsc",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,json,css,scss,md}'",
    "start:redis": "ttab -t 'Run Docker for redis' docker compose up",
    "start:worker": "ttab -t 'Run worker' npm run worker",
    "start:server": "nodemon src/index.ts",
    "seed": "nyc mocha --exit --timeout 8000 -r ts-node/register src/tests/seed.test.ts",
    "test:venue-utils": "nyc mocha --timeout 8000 --exit -r ts-node/register src/tests/venue.utils.test.ts",
    "test:notifs-utils": "nyc mocha --timeout 8000 --exit -r ts-node/register src/tests/notification.utils.test.ts",
    "test:validation-utils": "nyc mocha --timeout 8000 --exit -r ts-node/register src/tests/validation.utils.test.ts",
    "test:venues": "nyc mocha --timeout 12000 --exit -r ts-node/register src/tests/venue.controller.test.ts",
    "test:users": "nyc mocha --timeout 8000 --exit -r ts-node/register src/tests/user.controller.test.ts",
    "test:groups": "nyc mocha --timeout 8000 --exit -r ts-node/register src/tests/group.controller.test.ts",
    "test:notifs": "nyc mocha --timeout 8000 --exit -r ts-node/register src/tests/notification.controller.test.ts",
    "test": "nyc mocha --timeout 20000 --exit -r ts-node/register src/tests/*.test.ts"
  },
  "dependencies": {
    "@bull-board/express": "^5.0.0",
    "@faker-js/faker": "^7.6.0",
    "@types/axios": "^0.14.0",
    "@types/express": "^4.17.16",
    "@types/mocha": "^10.0.1",
    "@types/mongodb": "^4.0.7",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.4",
    "@types/node-fetch": "^2.6.2",
    "@types/supertest": "^2.0.12",
    "axios": "^1.3.1",
    "bull-arena": "^3.30.4",
    "bullmq": "^3.10.1",
    "cloudinary": "^1.35.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "fetch": "^1.1.0",
    "helmet": "^6.0.1",
    "ioredis": "^5.3.1",
    "mongoose": "^6.9.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemon": "^2.0.20",
    "socket.io": "^4.5.4",
    "streamifier": "^0.1.1",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "ttab": "^0.8.0"
  },
  "devDependencies": {
    "@types/multer": "^1.4.7",
    "@types/streamifier": "^0.1.0",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^2.8.3",
    "typescript": "^4.9.5"
  }
}
